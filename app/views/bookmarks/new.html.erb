<h1>Add a Bookmark to <%= @list.name %></h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <div class="form-group">
    <%= f.association :movie, collection: Movie.all, prompt: "Select a Movie", label: "Movie", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :comment, label: "Comment", class: "form-control" %>
  </div>
  <%= f.submit "Add Bookmark", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to List", list_path(@list), class: "btn btn-secondary" %>
