<div class="hero">
  <div class="hero-text">
    <h1>Save any kind of movies</h1>
    <p>Classic</p>
  </div>
</div>

<div class="container">
  <h2>My Lists</h2>
  <div class="lists-grid">
    <% @lists.each do |list| %>
      <div class="list-card" style="background-image: url('<%= list.image_url.presence || asset_path("placeholder.jpg") %>');">
        <h3><%= link_to list.name, list_path(list) %></h3>
      </div>
    <% end %>
  </div>
  <%= link_to "Create a movie list", new_list_path, class: "btn btn-green" %>
</div>
